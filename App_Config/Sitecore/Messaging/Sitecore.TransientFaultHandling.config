<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
    <sitecore>
        <services>
            <configurator type="Sitecore.Messaging.TransientFaultHandlingConfigurator, Sitecore.Messaging" />
        </services>
        <TransientFaultHandling>
            <Retryers>
                <NoRetry>
                    <Type>Sitecore.Framework.TransientFaultHandling.NoRetryerFactory, Sitecore.Framework.TransientFaultHandling.Abstractions</Type>
                </NoRetry>
            </Retryers>
        </TransientFaultHandling>
    </sitecore>
</configuration>